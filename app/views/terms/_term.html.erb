<% if user_signed_in? %>
  <% if current_user.liked_by?(term.id) %>
    <td>
    <%= link_to destroy_like_path(term), class: "like-link", method: :DELETE, remote: true do %>
      <i class="fa fa-heart unlike-btn"></i>
    <% end %>
    <%= term.likes.count %>
  </td>
  <% else %>
    <td>
      <%= link_to create_like_path(term), class: "like-link", method: :POST, remote: true do %>
        <i class="fa fa-heart like-btn"></i>
      <% end %>
      <%= term.likes.count %>
    </td>
  <% end %>
<% else %>

    <td>
    <i class="fa fa-heart unlike-btn"></i>
    <%= term.likes.count %>
  </td>

<% end %>